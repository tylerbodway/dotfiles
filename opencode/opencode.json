{
  "$schema": "https://opencode.ai/config.json",
  "theme": "vague",
  "autoupdate": true,
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder": {
          "name": "Qwen3 Coder"
        }
      }
    }
  },
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "mcp": {
    "asana": {
      "type": "remote",
      "url": "https://mcp.asana.com/sse",
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp/oauth",
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "box *": "ask",
      "box uninstall": "deny",
      "bundle exec rspec *": "allow",
      "chmod *": "ask",
      "curl *": "deny",
      "git clean *": "ask",
      "git diff *": "allow",
      "git log *": "allow",
      "git push *": "deny",
      "git reset *": "ask",
      "git status*": "allow",
      "go build *": "allow",
      "go test *": "allow",
      "make test *": "allow",
      "nc *": "deny",
      "netcat *": "deny",
      "npm test *": "allow",
      "pco *": "ask",
      "pco connect *": "deny",
      "pco console *": "deny",
      "pco dbconnect *": "deny",
      "pco ssm *": "deny",
      "rm *": "deny",
      "rspec *": "allow",
      "scp *": "deny",
      "sftp *": "deny",
      "ssh *": "deny",
      "su *": "deny",
      "sudo *": "deny",
      "wget *": "deny",
      "yarn test *": "allow"
    },
    "read": {
      "*": "allow",
      ".env": "deny",
      ".env.*": "deny",
      ".env.local": "deny",
      "**/secrets/**": "deny",
      "**/.secrets/**": "deny",
      "**/credentials*": "deny",
      "**/*.pem": "deny",
      "**/*.key": "deny",
      "**/*_rsa": "deny",
      "**/*_dsa": "deny",
      "**/*_ecdsa": "deny",
      "**/*_ed25519": "deny",
      "**/.ssh/**": "deny"
    },
    "edit": {
      "*": "ask",
      ".env": "deny",
      ".env.*": "deny",
      ".env.local": "deny",
      "**/secrets/**": "deny",
      "**/.secrets/**": "deny",
      "**/credentials*": "deny",
      "**/*.pem": "deny",
      "**/*.key": "deny"
    }
  },
  "lsp": {
    "herb": {
      "command": ["herb-language-server", "--stdio"],
      "extensions": [".erb", ".html"]
    },
    "jsonls": {
      "command": ["vscode-json-language-server", "--stdio"],
      "extensions": [".json", ".jsonc"]
    }
  },
  "formatter": {
    "herb": {
      "command": ["herb-format", "$FILE"],
      "extensions": [".erb"]
    },
    "stylua": {
      "command": ["stylua", "$FILE"],
      "extensions": [".lua"]
    }
  },
  "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}
