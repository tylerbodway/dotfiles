{
  "$schema": "https://opencode.ai/config.json",
  "theme": "vague",
  "autoupdate": true,
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder": {
          "name": "Qwen3 Coder"
        }
      }
    }
  },
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "permission": {
    "bash": {
      "*": "allow",
      "box *": "ask",
      "box uninstall *": "deny",
      "chmod *": "ask",
      "curl *": "deny",
      "git clean *": "ask",
      "git push *": "deny",
      "git reset *": "ask",
      "nc *": "deny",
      "netcat *": "deny",
      "pco *": "ask",
      "pco connect *": "deny",
      "pco console *": "deny",
      "pco dbconnect *": "deny",
      "pco ssm *": "deny",
      "rm *": "ask",
      "scp *": "deny",
      "sftp *": "deny",
      "ssh *": "deny",
      "su *": "deny",
      "sudo *": "deny",
      "wget *": "deny"
    },
    "read": {
      "*": "allow",
      ".env": "deny",
      ".env.*": "deny",
      ".env.local": "deny",
      "**/secrets/**": "deny",
      "**/.secrets/**": "deny",
      "**/credentials*": "deny",
      "**/*.pem": "deny",
      "**/*.key": "deny",
      "**/*_rsa": "deny",
      "**/*_dsa": "deny",
      "**/*_ecdsa": "deny",
      "**/*_ed25519": "deny",
      "**/.ssh/**": "deny"
    },
    "edit": {
      "*": "ask",
      ".env": "deny",
      ".env.*": "deny",
      ".env.local": "deny",
      "**/secrets/**": "deny",
      "**/.secrets/**": "deny",
      "**/credentials*": "deny",
      "**/*.pem": "deny",
      "**/*.key": "deny"
    }
  },
  "lsp": {
    "herb": {
      "command": ["herb-language-server", "--stdio"],
      "extensions": [".erb", ".html"]
    },
    "jsonls": {
      "command": ["vscode-json-language-server", "--stdio"],
      "extensions": [".json", ".jsonc"]
    }
  },
  "formatter": {
    "herb": {
      "command": ["herb-format", "$FILE"],
      "extensions": [".erb"]
    },
    "stylua": {
      "command": ["stylua", "$FILE"],
      "extensions": [".lua"]
    }
  },
  "mcp": {
    "asana": {
      "type": "remote",
      "url": "https://mcp.asana.com/sse",
      "enabled": true
    },

    "redshift": {
      "type": "local",
      "command": [
        "uv",
        "--directory",
        "/Users/tylerbodway/Code/mcp-servers/redshift",
        "run",
        "awslabs.redshift-mcp-server"
      ],
      "environment": {
        "AWS_PROFILE": "pco-bi-query",
        "AWS_REGION": "us-east-1",
        "FASTMCP_LOG_LEVEL": "WARNING"
      },
      "enabled": true
    }
  },
  "tools": {
    "asana_*": false,
    "redshift_*": false
  },
  "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}
